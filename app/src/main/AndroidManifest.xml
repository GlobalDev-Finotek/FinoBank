<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="finotek.global.dev.talkbank_ca">

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity android:name=".user.UserRegistrationActivity">
        </activity>
        <activity android:name=".user.SignRegistrationActivity">
        </activity>
        <activity android:name=".user.profile.CaptureProfilePicActivity">
        </activity>
        <activity android:name=".user.PinRegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".user.credit.CreditRegistrationActivity">
        </activity>
        <activity android:name=".setting.SettingsActivity">
        </activity>
    </application>

</manifest>