<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:background="@color/color_extended_control_bg"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/bullet1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bullet_activated"/>

            <View
                android:id="@+id/bullet2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bullet_deactivated"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/extended_control"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>
</layout>