<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="finotek.global.dev.talkbank_ca">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>


    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false"/>

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".user.UserRegistrationActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".user.sign.SignRegistrationActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".user.profile.CaptureProfilePicActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".user.PinRegistrationActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".user.PinChangeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".user.credit.CreditRegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".setting.SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".setting.SettingDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>
        <activity
            android:name=".chat.ChatActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="FinoBank"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".chat.TransactionViewMoreActivity">
        </activity>

        <service
            android:name=".TalkBankMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".TalkBankInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".chat.context_log.ContextLogService">
            <intent-filter>
                <action android:name = "chat.ContextLog.ContextLogService"/>
            </intent-filter>
        </service>

    </application>

</manifest>