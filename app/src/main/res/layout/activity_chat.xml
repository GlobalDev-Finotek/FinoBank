<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/color_chat_background">
        <RelativeLayout
            android:id="@+id/app_title"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_talk_bank"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_foreground" />
        </RelativeLayout>
        <finotek.global.dev.talkbank_ca.chat.view.ChatView
            android:id="@+id/chat_view"
            android:layout_below="@id/app_title"
            android:layout_above="@+id/footer_inputs"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </finotek.global.dev.talkbank_ca.chat.view.ChatView>
        <LinearLayout
            android:id="@+id/footer_inputs"
            android:background="@color/color_chat_footer"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="6dp">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_add_white_24dp"
                android:tint="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:contentDescription="Select request as image." />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:textColor="@color/color_text_default"
                android:hint="Type Here" />
            <Button
                android:id="@+id/send_button"
                android:layout_width="50dp"
                android:layout_marginEnd="10dp"
                android:layout_height="match_parent"
                android:text="@string/string_send"
                android:textColor="@color/color_foreground"
                android:background="@color/color_send_disabled" />
        </LinearLayout>
    </RelativeLayout>
</layout>

