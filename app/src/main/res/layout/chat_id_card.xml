<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_margin_bottom"
        android:layout_marginEnd="@dimen/chat_margin_left_right"
        android:layout_marginStart="@dimen/chat_margin_left_right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_card_img"
            android:src="@drawable/ronaldo"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:contentDescription="ID Card"  />

        <TableLayout
            android:id="@+id/id_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#E5E4E4"
            android:orientation="vertical"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#fff">

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    style="@style/table_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_string_name"/>

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    android:id="@+id/name"
                    style="@style/table_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#fff">

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    style="@style/table_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_string_birth_date"/>

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    android:id="@+id/birth_date"
                    style="@style/table_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</layout>