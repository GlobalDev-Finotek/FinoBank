<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="account"
            type="finotek.global.dev.brazil.chat.messages.Account"/>
    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="221dp"
        android:layout_height="103dp"
        android:layout_marginStart="@dimen/chat_margin_left_right"
        android:background="@drawable/border_round_gray"
        android:padding="15dp">

        <finotek.global.dev.brazil.widget.TalkBankTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{account.name}"
            android:textColor="@color/dark_100"
            android:textSize="20sp"
            app:custom_font="noto_medium"/>

        <finotek.global.dev.brazil.widget.TalkBankTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="@{account.date}"
            android:textColor="@color/dark_50"
            android:textSize="16sp"/>

        <finotek.global.dev.brazil.widget.TalkBankTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@{account.history}"
            android:textColor="@color/dark_50"
            android:textSize="16sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="3dp"
            android:button="@drawable/checkbox_bookmark"
            android:checked="@{account.star}"
            android:scaleX="1.2"
            android:scaleY="1.2"/>
    </RelativeLayout>
</layout>