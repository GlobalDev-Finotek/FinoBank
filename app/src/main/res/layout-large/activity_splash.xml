<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tb="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/wrapper_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pin_green"
            >

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/chat_background"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="444dp"
                android:layout_height="80dp"
                android:layout_below="@+id/iv_intro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="211dp"
                android:contentDescription="Finotek Logo"
                app:srcCompat="@drawable/logo_finobank" />

            <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                android:id="@+id/tv_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:background="@android:color/transparent"
                android:text="@string/main_string_copyright_finotek"
                android:textColor="@android:color/white"

                android:textSize="@dimen/text_small"
                app:custom_font="noto_light"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>
