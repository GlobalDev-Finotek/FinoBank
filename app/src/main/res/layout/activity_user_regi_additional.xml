<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tb="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/activity_user_regi_additional"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
            android:id="@+id/talkBankTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_two"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="@string/additional_inform"
            android:theme="@style/Title"
            tb:custom_font="noto_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:elevation="0dp"
                    android:gravity="center_vertical"
                    android:text="\u2022"
                    android:textColor="@color/bullet"
                    android:theme="@style/Stit"
                    tb:custom_font="noto_medium"/>

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="비상 연락처"
                    android:theme="@style/Stit"
                    tb:custom_font="noto_medium"/>
            </LinearLayout>

            <finotek.global.dev.talkbank_ca.widget.TalkBankEditText
                android:id="@+id/edt_emergency_phone_number"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="@string/emergency_phone_number"
                android:inputType="phone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:text="\u2022"
                    android:textColor="@color/bullet"
                    android:theme="@style/Stit"
                    tb:custom_font="noto_medium"/>

                <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                    android:id="@+id/talkBankTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="이메일 주소"
                    android:theme="@style/Stit"
                    tb:custom_font="noto_medium"/>
            </LinearLayout>

            <finotek.global.dev.talkbank_ca.widget.TalkBankEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:text="\u2022"
                        android:textColor="@color/bullet"
                        android:theme="@style/Stit"
                        tb:custom_font="noto_medium"/>

                    <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="7dp"
                        android:gravity="center_vertical"
                        android:text="신용카드 등록"
                        android:theme="@style/Stit"
                        tb:custom_font="noto_medium"/>
                </LinearLayout>

                <finotek.global.dev.talkbank_ca.widget.TalkBankButton
                    android:id="@+id/btn_capture_creidt"
                    style="@style/InverseButton"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:elevation="0dp"
                    android:text="@string/capture_credit"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:text="\u2022"
                        android:textColor="@color/bullet"
                        android:theme="@style/Stit"
                        tb:custom_font="noto_medium"/>

                    <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="인증 사진"
                        android:theme="@style/Stit"
                        tb:custom_font="noto_medium"/>
                </LinearLayout>

                <finotek.global.dev.talkbank_ca.widget.TalkBankButton
                    android:id="@+id/btn_capture_profile"
                    style="@style/InverseButton"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/capture_profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:text="\u2022"
                        android:textColor="@color/bullet"
                        android:theme="@style/Stit"
                        tb:custom_font="noto_medium"/>

                    <finotek.global.dev.talkbank_ca.widget.TalkBankTextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="PIN 코드"
                        android:theme="@style/Stit"
                        tb:custom_font="noto_medium"/>
                </LinearLayout>

                <finotek.global.dev.talkbank_ca.widget.TalkBankButton
                    android:id="@+id/btn_pin_registration"
                    style="@style/InverseButton"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="PIN 코드 변경"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <finotek.global.dev.talkbank_ca.widget.TalkBankButton
                android:id="@+id/btn_save"
                style="@style/RoundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="저장"/>
        </RelativeLayout>


    </LinearLayout>
</layout>
