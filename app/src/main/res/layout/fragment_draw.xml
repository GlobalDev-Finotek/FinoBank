<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_grid">

        <finotek.global.dev.talkbank_ca.widget.DrawingCanvas
            android:id="@+id/drawingCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_large_circle_border"
                android:padding="10dp"
                android:tint="@color/white_two"
                app:srcCompat="@drawable/vector_drawable_icon_chevron_right"/>

            <ImageButton
                android:id="@+id/ib_size_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="19dp"
                android:background="@drawable/white_small_circle_border"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/vector_drawable_icon_fullsize"/>
        </RelativeLayout>

    </FrameLayout>
</layout>
