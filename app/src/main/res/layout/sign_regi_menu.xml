<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFebf1f1">
	<LinearLayout
	    android:id="@+id/sign_input"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		>
		
        <include
        	android:id="@+id/front_title"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
    		android:layout_weight="1.1" 
        	layout="@layout/include_title"
        />
		
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2.1" 
	        >
	        <TextView
		        android:id="@+id/desc_txt"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center"
	            ></TextView>
	    </LinearLayout>
			    
	    <EditText
	        android:id="@+id/id_input"
	        android:layout_marginBottom="20dp"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.1"
	        android:background="@drawable/border"
	        android:inputType="textVisiblePassword"
	        android:maxLength="12"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:singleLine="true"
	        android:hint="아이디입력"/>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.2" >
	    </LinearLayout>
	    <Button
	       android:id="@+id/sign_reg_btn"
	       android:layout_marginTop="10dp"
	       android:layout_width="fill_parent"
	       android:layout_height="0dp"
	       android:layout_weight="1.1"
	       android:background="@drawable/button_navy"/>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2.9" >
	    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/sign_result"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible" 
        android:orientation="vertical">

        <include
        	android:id="@+id/back_title"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
    		android:layout_weight="1.1" 
        	layout="@layout/include_title"
        />
		
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.75" >
	    </LinearLayout>
        
        <TextView
           android:id="@+id/result_text"
           android:layout_width="fill_parent"
           android:layout_height="0dp"
           android:layout_weight="1.1"
           android:background="@drawable/border_red" 
           android:gravity="center" />
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.15" >
	    </LinearLayout>

	    <LinearLayout 
	        android:id="@+id/buttons_line"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.1"
	        android:orientation="horizontal"
	        >
		    <Button
		        android:id="@+id/sign_again"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="4"
		        android:gravity="center"
	        	android:background="@drawable/button_gray"
		        />
		    <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1" >
		    </LinearLayout>
		    <Button
		        android:id="@+id/sign_complete"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="4"
		        android:gravity="center"
	        	android:background="@drawable/button_gray"
		        />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2.3" >
	    </LinearLayout>
	</LinearLayout>
</FrameLayout>