<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white_three">

        <LinearLayout
            android:id="@+id/footer_inputs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/color_chat_footer"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageButton
                android:id="@+id/show_ex_control"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Select request as image."
                android:src="@drawable/ic_add_white_24dp"
                android:tint="@color/colorPrimary"/>

            <finotek.global.dev.talkbank_ca.widget.TalkBankEditText
                android:id="@+id/chat_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:hint="@string/dialog_string_input_message"
                android:inputType="text"
                android:padding="0dp"
                android:textColor="@color/color_text_default"
                android:textColorHint="@color/dark_30"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_mike"/>

            <finotek.global.dev.talkbank_ca.widget.TalkBankButton
                android:id="@+id/send_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_send_primary"
                android:text="@string/main_button_send"
                android:textColor="@color/color_foreground"
                app:tb_font="noto_light"/>
        </LinearLayout>
    </RelativeLayout>
</layout>