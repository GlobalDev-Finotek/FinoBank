<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
       	<shape>
           	<corners android:radius="5.0px" />
           	<stroke android:width="1dp" android:color="#FF666666" />
               <solid android:color="#ff2f2e7d" />
       	</shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5.0px" />
            	<stroke android:width="1dp" android:color="#ff666666" />
                <gradient android:startColor="#ffffff00" android:endColor="#ffffff00" android:angle="270.0" android:centerY="0.75" android:centerColor="#ffffff00" />
            </shape>
        </clip>
    </item>
</layer-list>