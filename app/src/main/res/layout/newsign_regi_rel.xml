<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    >
    
	<include
    	android:id="@+id/title_layout"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_alignParentTop="true"
    	layout="@layout/include_title_prev"	
    />
    
    <LinearLayout
	    android:id="@+id/bottom_buttons_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"	    
		android:orientation="horizontal"
		android:layout_alignParentBottom="true">
	    <Button
	        android:id="@+id/bottom_right_button"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:padding="0dp"
	        android:background="@drawable/border_dkgray_fill"
	        android:layout_weight="1"
	        android:textAllCaps="false"
	        /> 
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/keypad_buttons1" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@id/bottom_buttons_layout"
        android:orientation="horizontal"
        android:visibility="gone">
	    <Button 
	        android:id="@+id/ten" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/eleven" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/twelve" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	</LinearLayout>    
	
    <LinearLayout
        android:id="@+id/keypad_buttons2" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@id/keypad_buttons1"
        android:orientation="horizontal"
        android:visibility="gone">
	    <Button 
	        android:id="@+id/seven" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/eight" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/nine" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	</LinearLayout>    
	
    <LinearLayout
        android:id="@+id/keypad_buttons3" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@id/keypad_buttons2"
        android:orientation="horizontal"
        android:visibility="gone">
	    <Button 
	        android:id="@+id/four" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/five" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/six" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	</LinearLayout>    
	
    <LinearLayout
        android:id="@+id/keypad_buttons4" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@id/keypad_buttons3"
        android:orientation="horizontal"
        android:visibility="gone">
	    <Button 
	        android:id="@+id/one" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/two" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	    <Button 
	        android:id="@+id/three" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/border_gray_nor"
	        />
	</LinearLayout> 
	
    <LinearLayout
		android:id="@+id/seekbar_layout"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_centerVertical="true"
		>
		<FrameLayout
			android:id="@+id/seekbar_back"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
	    	android:layout_gravity="center_vertical"
			>
			<SeekBar
    			android:id="@+id/seekBar1"
    			android:layout_width="match_parent"
    			android:layout_height="30dp"
		    	android:paddingLeft="40dp"
		    	android:paddingRight="40dp"
				android:maxHeight="10dp"
				android:minHeight="30dp"
				android:progressDrawable="@drawable/seek_drawable2"
    			android:layout_gravity="center_vertical"/>
		</FrameLayout>	
	</LinearLayout>	
	
    <TextView
        android:id="@+id/seek_desc_text"
        android:layout_below="@id/title_layout"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dp"
		android:layout_marginLeft="40dp" />
    
    <TextView
        android:id="@+id/base_center"
        android:layout_centerVertical="true"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/percent0"
        android:layout_above="@id/base_center"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:layout_marginLeft="40dp" />
    
    <TextView
        android:id="@+id/percent100"
        android:layout_above="@id/base_center"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:layout_marginRight="40dp" 
		android:gravity="right"/>
    
    <TextView
        android:id="@+id/complex_sign_text"
        android:layout_below="@id/base_center"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="40dp"  />
    
    <TextView
        android:id="@+id/simple_sign_text"
        android:layout_below="@id/base_center"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="40dp" 
		android:gravity="right" />
    
</RelativeLayout>
