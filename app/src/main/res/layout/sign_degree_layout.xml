<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFebf1f1" 
    >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">
	    <TextView
	        android:id="@+id/title_text"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"/>
	    <LinearLayout 
	        android:id="@+id/logo_finotech_layout"
	        android:layout_width="90dp"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dp">
		    <ImageView 
		        android:id="@+id/logo_finotech"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:scaleType="fitCenter"
		        android:src="@drawable/logo_finotek"
		        />	        
        </LinearLayout>
	</RelativeLayout>
    
 	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
	</LinearLayout>    	    

    <TextView
        android:id="@+id/descript_text"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"/>
       
    <ImageView 
        android:id="@+id/div_line"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:src="@drawable/list_div_line"
        android:scaleType="fitCenter"
        />	    

    <LinearLayout
        android:id="@+id/buttons_line"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/reliability_title"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.8"
	        android:singleLine="true"
	        android:textSize="18dp" 
	        android:gravity="center_vertical|right" />
	    <EditText 
	        android:id="@+id/reliability"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1.2"
	        android:inputType="numberDecimal"
	        android:textSize="20dip"
	        android:maxLength="7"
	        android:gravity="center_vertical|right" 
	        android:background="@drawable/border"
	        />
	    <TextView android:id="@+id/percent" 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.5" 
	        android:text="%"
	        android:textSize="20dip"
	        android:gravity="center_vertical|left" />
	    <TextView
	        android:id="@+id/difficulty_title"
	       android:text="난이도"
	       android:layout_width="0dp"
	       android:layout_height="fill_parent"
	       android:layout_weight="0.8" 
	       android:textSize="18dp" 
	       android:gravity="center_vertical|right" />
        <Button
           android:id="@+id/difficulty_btn"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1.2" 
           android:textSize="15dp" 
           android:background="@drawable/button_gray"/>
	 	<LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.3" >
		</LinearLayout>    	    
    </LinearLayout>
 	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2" >
	</LinearLayout>    	    
</LinearLayout>
