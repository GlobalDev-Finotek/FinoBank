<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_margin_bottom"
        android:layout_marginEnd="@dimen/chat_margin_left_right"
        android:layout_marginStart="@dimen/chat_margin_left_right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/agreements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4E3E3"
            android:orientation="vertical"
            android:paddingBottom="1dp">
        </LinearLayout>

        <finotek.global.dev.brazil.widget.TalkBankButton
            android:id="@+id/sign_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_sign"
            android:text="@string/dialog_button_signature"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_normal"
            app:tb_font="noto_medium"/>
    </LinearLayout>
</layout>