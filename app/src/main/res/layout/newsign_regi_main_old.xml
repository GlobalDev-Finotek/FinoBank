<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFFFF">
	
    <include
    	android:id="@+id/title_layout"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
    	layout="@layout/include_title_prev"	
    />
    
    <LinearLayout
	    android:id="@+id/regist_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"	    
		android:orientation="vertical">
	    <TextView
	    	android:id="@+id/phone_number_title"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="80"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:gravity="center_vertical"/>
	    <ImageView 
	        android:id="@+id/div_under_line1"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="20"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:src="@drawable/list_div_line"
	        android:scaleType="fitCenter"
        />	    
	    <TextView
	    	android:id="@+id/phone_number_text"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="80"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:gravity="center_vertical"
	        android:background="#FFBBBBBB"/>
	    <Button
	        android:id="@+id/photo_reg_btn"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:padding="0dp"
	        android:layout_weight="100"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:background="@drawable/border_dkgray_blank"
	        /> 
	    <Button
	        android:id="@+id/pin_reg_btn"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:padding="0dp"
	        android:layout_weight="100"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:background="@drawable/border_dkgray_blank"
	        /> 
	    <ImageView 
	        android:id="@+id/dot_div_line"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="20"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:src="@drawable/dot_div_line"
	        android:scaleType="fitCenter"
        />	    
	    <TextView
	    	android:id="@+id/reliability_title"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="80"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:gravity="center_vertical"/>
	    <ImageView 
	        android:id="@+id/div_under_line2"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="20"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:src="@drawable/list_div_line"
	        android:scaleType="fitCenter"
        />	    
	    <ImageView 
	        android:id="@+id/div_under_line3"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="20"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:src="@drawable/list_div_line"
	        android:scaleType="fitCenter"
        />	    
	    <TextView
	    	android:id="@+id/reliability_select"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="80"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:gravity="center_vertical"/>
	    <ImageView 
	        android:id="@+id/div_under_line4"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="20"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
	        android:src="@drawable/list_div_line"
	        android:scaleType="fitCenter"
        />	    
	    <LinearLayout
		    android:id="@+id/bottom_buttons_layout"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="90"	    
			android:orientation="horizontal">
		    <Button
		        android:id="@+id/bottom_left_button"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:padding="0dp"
		        android:background="@drawable/border_dkgray_blank"
		        android:layout_weight="1"
		        /> 
		    <Button
		        android:id="@+id/bottom_right_button"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:padding="0dp"
		        android:background="@drawable/border_dkgray_fill"
		        android:layout_weight="1"
		        /> 
	    </LinearLayout>
	</LinearLayout>   
</LinearLayout>
