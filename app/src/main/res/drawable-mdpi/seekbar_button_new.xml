<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Press the State -->
    <item android:drawable="@drawable/seek_button" android:state_focused="true" android:state_pressed="true"/>
    <!-- Ordinary focus state -->
    <item android:drawable="@drawable/seek_button" android:state_focused="false" android:state_pressed="false"/>
    <!-- The State has the focus -->
    <item android:drawable="@drawable/seek_button" android:state_focused="true" android:state_pressed="false"/>
    <!-- Has focus -->
    <item android:drawable="@drawable/seek_button" android:state_focused="true"/>
    <item android:drawable="@drawable/seek_button" android:state_focused="false" android:state_pressed="true"/>

</selector>